@model IEnumerable<SistemaGeonet.Models.Catalogo>

@{
    ViewData["Title"] = "IndiceCatalogo";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<head>
    <link href="~/css/star.css" rel="stylesheet" />
</head>
<div id="demo" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
        <li data-target="#demo" data-slide-to="4"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="../images/banner1.jpg" style="width: 100%;" alt="Chicago">
        </div>
        <div class="carousel-item">
            <img src="../images/banner2.jfif" style="width: 100%;" alt="Chicago">
        </div>
        <div class="carousel-item">
            <img src="../images/banner3.jfif" style="width: 100%;" alt="Chicago">
        </div>
        <div class="carousel-item">
            <img src="../images/banner4.jfif" style="width: 100%;" alt="Chicago">
        </div>
        <!-- <div class="carousel-item">
             <img src="../images/banner3.jfif" alt="Chicago">
            </div> -->
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>
<div class="ofertas">
    <div class="titulo">
        <h3>Precios de Locura</h3>
    </div>
    <div class="container">
        <div class="row col-md-12">
            @foreach (var item in Model)
            {
                <div class=" col-md-3 col-sm-6">
                    <div class="product-grid7">
                        <div class="product-image7">
                            <a asp-controller="catalogo" asp-action="DetalleProductoCatalogo" asp-route-id="@item.idCatalogo">
                                <img class="pic-1" src="~/images/@Html.DisplayFor(modelItem => item.foto1)">
                            </a>
                            <ul class="social">
                                <li hidden><a href=""><i class="fas fa-search"></i></a></li>
                                <li hidden><a href=""><i class="fas fa-heart"></i></a></li>
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <li id="idcant" value="1" hidden></li>
                                    <li><a onclick="agregarCarrito(@Html.DisplayFor(modelItem => item.inventario.idInventario), 'idcant')"><i class="fas fa-shopping-cart"></i></a></li>
                                }
                                else
                                {
                                    <li value="1" hidden></li>
                                    <li><a onclick="agregarCarritoLS(@Html.DisplayFor(modelItem => item.inventario.idInventario))"><i class="fas fa-shopping-cart"></i></a></li>
                                }
                            </ul>
                            <span class="product-new-label">Oferta</span>
                        </div>
                        <div class="product-content">
                            <h3 class="title"><a href="#">@Html.DisplayFor(modelItem => item.inventario.Equipo.nombre)</a></h3>
                            <ul class="rating">
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star"></li>
                            </ul>
                            <div class="price">
                                $@Html.DisplayFor(modelItem => item.inventario.precioUnit)
                                <span>$@Html.DisplayFor(modelItem => item.inventario.precioUnit)</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
